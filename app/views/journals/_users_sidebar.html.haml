- unless @user_journals.empty?
  .sidebarBlock
    %p= t('user_journals_desc')

- @user_journals.each do |ugroup|
  .sidebarBlock
    %h2.userStatusDisplayName= h(ugroup[0].display_name)
    %h3.userStatus= ugroup[0].status.nil? ? '' : h(ugroup[0].status.content)
    %ul.userJournalList
      - ugroup[1].each do |journal|
        %li.journalContent= h(journal.content)