- @page_title = @initial_signup ? :set_password.l : :reset_password.l

- form_tag :controller => 'access', :action => 'reset_password' do
  = error_messages_for :user
  %input{:type => 'hidden', :name => 'confirm', :value => h(params[:confirm])}
  %div
    %label{:for => 'passwordFormNewPassword'}= "#{:password.l} <span class=\"label_required\">*</span>"
    %input{:type => 'password', :id => 'passwordFormNewPassword', :name => 'user[password]'}
  %div
    %label{:for => 'passwordFormNewPasswordAgain'}= "#{:repeat_password.l} <span class=\"label_required\">*</span>"
    %input{:type => 'password', :id => 'passwordFormNewPasswordAgain', :name => 'user[password_confirmation]'}
  #dialogSubmit
    %button.submit{:type => 'submit'}= @initial_signup ? :set_password.l : :change_password.l