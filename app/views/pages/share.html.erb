<%
    @tabbed_navigation_items = common_tabs(:pages)
    @user_navigation_items = user_tabs(nil)
%>

<%= form_tag hash_for_share_page_path.merge(:id => @page.id, :use_route => nil), :method => :post %>
  <%= error_messages_for :page %>
  <% Account.owner.users.each do |user| next if user.id == @page.created_by_id; -%>
  <div>
    <label><%= h user.display_name %></label>
    <%= check_box_tag 'page[shared_users][]', user.id, @page.shared_user_ids.include?(user.id), :id => "pageShareUser#{user.id}" %>
  </div>
  <% end %>
  <div>
    <%= submit_tag :share_page.l %>
  </div>
</form>
<%= link_to :page_back.l, hash_for_page_path.merge(:id => @page.id, :use_route => nil) %>