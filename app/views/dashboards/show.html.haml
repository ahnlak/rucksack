- @page_title = :overview.l    
- @tabbed_navigation_items = common_tabs(:overview)
- @user_navigation_items = user_tabs(nil)

#activityLogs
  - prev_user = nil; prev_id = nil
  - @recent_activities.each do |items|
    %h2= items[0]
    - prev_start = true; logs = items[1]
    - logs.reverse_each do |log|
      
      -# Display user if not shown before
      - if prev_start or (prev_id != log.created_by_id and !log.created_by_id.nil?)
        - if prev_id != log.created_by_id
          - prev_id = log.created_by_id; prev_user = log.created_by
        - prev_start = false;
        
        %div{:style => 'clear:both;'}
        .activityUser= "#{prev_user.display_name}:"
      
      .activityEntry
        -# "#{log.action} (#{log.rel_object_id} #{log.rel_object_type}) | p:#{log.page_id} by #{log.created_by_id}"
        - if !log.page.nil?
          = "activity_modify_Page".to_sym.l_with_args(:object => link_to(h(log.page.title), url_for(log.page)))
          -# "(#{log.created_on.to_s})"
        - elsif !log.rel_object.nil?
          = "activity_#{log.action}_#{log.rel_object_type}".to_sym.l_with_args(:object => link_to(h(log.rel_object.object_name), url_for(log.rel_object)), :name => h(log.object_name))
          -# "(#{log.created_on.to_s})"
