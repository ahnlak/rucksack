<div id="add_NoteForm">
<% if @note.nil? or @note.new_record? %>
<h2><%= :add_note.l %></h2>
<%= form_tag( page_notes_path(@page), :method => (:post), :id => "add_NoteFormContent") %>
<% else %>
<%= form_tag( page_note_path(@page, @note), :method => (:put), :id => "update_NoteFormContent") %>
<% end %>
  <div>
    <label for="noteFormTitle"><%= :title.l %>: <span class="label_required">*</span></label>
    <%= text_field 'note', 'title', :id => 'noteFormTitle', :class => 'long' %>
  </div> 
  <div>
    <label for="noteFormContent"><%= :content.l %>:</label>
    <%= text_area 'note', 'content', :id => 'noteFormContent', :class => 'comment' %>
  </div>
  
  <% if @note.nil? or @note.new_record? %>
  <input type="hidden" id="add_NoteFormBefore" name="position[before]" value="0"/>  
  <input type="hidden" id="add_NoteFormSlot" name="position[slot]" value="0"/> 
  <button class="submit" type="submit"><%= :add_note.l %></button> 
  <% else %>
  <button class="submit" type="submit"><%= :edit_note.l %></button>
  <% end %>
  
  <a href="#" class="cancel_WidgetForm"><%= :cancel.l %></a>
</form>
</div>